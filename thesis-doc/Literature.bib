  shorttitle = {Chronic Insomnia, Premenopausal Women and Sleep Disordered Breathing},
  author = {Guilleminault, Christian and Palombini, Luciana and Poyares, Dalva and Chowdhuri, Susmita},
  year = {2002},
  month = jul,
  journal = {Journal of Psychosomatic Research},
  volume = {53},
